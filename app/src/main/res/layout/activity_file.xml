<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iiitd.apurupa.mcassignment3.savedatademo.FileActivity">

    <EditText
        android:id="@+id/fileEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true"
        android:layout_alignRight="@+id/readInternalbutton"
        android:layout_alignEnd="@+id/readInternalbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTERNAL WRITE"
        android:id="@+id/writeInternalButton"
        android:layout_above="@+id/writeExternalButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTERNAL READ"
        android:id="@+id/readInternalbutton"
        android:layout_above="@+id/writeExternalButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXTERNAL WRITE PUBLIC"
        android:id="@+id/writeExternalButton"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/writeInternalButton"
        android:layout_alignEnd="@+id/writeInternalButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXTERNAL READ PUBLIC"
        android:id="@+id/readExternalbutton"
        android:layout_alignTop="@+id/writeExternalButton"
        android:layout_alignRight="@+id/readInternalbutton"
        android:layout_alignEnd="@+id/readInternalbutton"
        android:layout_alignLeft="@+id/readInternalbutton"
        android:layout_alignStart="@+id/readInternalbutton" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/fileBackButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXTERNAL WRITE PRIVATE"
        android:id="@+id/writeextprivateButton"
        android:layout_below="@+id/writeExternalButton"
        android:layout_alignRight="@+id/writeExternalButton"
        android:layout_alignEnd="@+id/writeExternalButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXTERNAL READ PRIVATE"
        android:id="@+id/readextprivateButton"
        android:layout_alignBottom="@+id/writeextprivateButton"
        android:layout_alignRight="@+id/readExternalbutton"
        android:layout_alignEnd="@+id/readExternalbutton"
        android:layout_alignLeft="@+id/readInternalbutton"
        android:layout_alignStart="@+id/readInternalbutton" />

</RelativeLayout>
