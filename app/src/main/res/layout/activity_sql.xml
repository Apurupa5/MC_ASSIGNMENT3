<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.iiitd.apurupa.mcassignment3.savedatademo.SQLActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE STUDENT"
        android:id="@+id/create_stButton"
        android:layout_above="@+id/update_stButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READ STUDENT"
        android:id="@+id/read_stButton"
        android:layout_alignTop="@+id/create_stButton"
        android:layout_alignLeft="@+id/delete_stButton"
        android:layout_alignStart="@+id/delete_stButton"
        android:layout_alignRight="@+id/delete_stButton"
        android:layout_alignEnd="@+id/delete_stButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE STUDENT"
        android:id="@+id/update_stButton"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE STUDENT"
        android:id="@+id/delete_stButton"
        android:layout_below="@+id/create_stButton"
        android:layout_alignRight="@+id/sqlbackButton"
        android:layout_alignEnd="@+id/sqlbackButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/sqlbackButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
